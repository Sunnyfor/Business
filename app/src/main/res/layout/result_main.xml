<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Wrap_Vertical_Style"
    android:background="@mipmap/bg_frosted_glass"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="@dimen/px490"
        android:layout_height="@dimen/px564"
        android:layout_marginBottom="@dimen/px90"
        android:layout_marginTop="@dimen/px300"
        android:contentDescription="@string/app_icon"
        android:src="@mipmap/bg_ticked_invalid"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/px68"
        android:layout_height="@dimen/px68"
        android:contentDescription="@string/app_icon"
        android:src="@mipmap/icon_close" />

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_text"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:text="@string/back_home_page"
            android:textColor="@color/white"
            android:textSize="@dimen/px30" />

    </LinearLayout>

</LinearLayout>